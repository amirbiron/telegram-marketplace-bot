APP_NAME=Telegram Marketplace Bot
ENVIRONMENT=development
DEBUG=true

# PostgreSQL (asyncpg) - לא נשתמש בחיבור בפועל בטסטים, רק לאימות קונפיג
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/devdb
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# טלגרם - טוקן דמה
TELEGRAM_BOT_TOKEN=dev-token
LOG_CHANNEL_ID=0
ADMIN_CHAT_IDS=[]

# אבטחה
SECRET_KEY=dev-secret